<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Grpc.Net.Client;assembly=Grpc.Net.Client"
             xmlns:demo="clr-namespace:GrpcDemo;assembly=GrpcDemo"
             xmlns:shared="clr-namespace:GrpcShared;assembly=GrpcShared"
             x:Class="GrpcDemo.MainPage"
             x:DataType="demo:MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <Grid RowSpacing="25" RowDefinitions="Auto,Auto,Auto,Auto,*">

        <Label 
                Text="gRPC Demo"
                Grid.Row="0"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

        <Label 
                Text=""
                Grid.Row="1"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="CounterLabel"
                HorizontalOptions="Center" />

        <Button 
                Text="Retrieve Random Record"
                FontAttributes="Bold"
                Grid.Row="2"
                SemanticProperties.Hint="Use gRPC to fetch a random Person record"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        <Button 
                Text="Retrieve 5000 record stream"
                FontAttributes="Bold"
                Grid.Row="3"
                SemanticProperties.Hint="Use gRPC to stream 5000 records"
                Clicked="GRPCStreamButtonClicked"
                HorizontalOptions="Center" />

        <CollectionView HorizontalOptions="FillAndExpand"
                        Grid.Row="4" 
                        ItemSizingStrategy="MeasureFirstItem"
                        VerticalOptions="FillAndExpand"
                        ItemsSource="{Binding People}" 
                        BackgroundColor="Beige">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="shared:Person">
                    <GridLayout ColumnDefinitions="Auto,Auto">
                        <Label TextColor="Blue" Margin="10,0,0,0" GridLayout.Column="0" Text="{Binding FirstName}" />
                        <Label Margin="10,0,0,0" GridLayout.Column="1" Text="{Binding LastName}" />
                    </GridLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
